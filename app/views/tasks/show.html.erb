<!DOCTYPE html>
<html>
  <head>
    <title>Tasks List</title>
    <%= csrf_meta_tags %>
  </head>

  <body>
    <h2><%= @task.title %></h2>
    <p><%= @task.details %></p>

    <% if @task.completed == true %>
      <p> This task is completed </p>
        <% else %>
      <p> This task is not completed yet </p>
    <% end %>

    <div style="display: flex">
      <%= link_to "Edit", edit_task_path(@task) %>
      <%= link_to "Delete", task_path(@task),
          method: :delete,
          data: { confirm: "Are you sure?" } %>
    </div>

  </body>
</html>
