<!DOCTYPE html>
<html>
  <head>
    <title>Tasks List</title>
    <%= csrf_meta_tags %>
  </head>

  <body>
    <h1>My tasks</h1>
    <% @tasks.each do |task| %>
      <div style="display: flex">

        <% if task.completed == true %>
          <p>[X]</p>
            <% else %>
          <p>[ ]</p>
        <% end %>
        <p><%= link_to task.title, task_path(task) %></p>
        <%= link_to "EDIT", edit_task_path(task) %>

      </div>
    <% end %>

    <%= link_to "Add a new task", new_task_path %>

  </body>
</html>
